<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
  </head>
  <body>
    <header>
      <nav>
        <img src="/assets/header.png" width="300px" height="40" alt="" class="nav-cont">
        <br>
        <% if user_signed_in? %>
          <% if profile_img(current_user) %>
            <img src="/assets/icon.png" width="50px" height="50px" class="icon-img">
          <% else %>
            <img src=<%= current_user.image%> class="icon_image" width="50px" height="50px">
          <% end %>
          <%= link_to 'プロフィール変更', edit_user_registration_path %> 
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        <% end %>
      </nav>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>