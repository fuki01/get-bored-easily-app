<div class="point">
  <div class="rank">
  <h2>ランキング</h2>
    <table width="300">
    <%cnt=0%>
      <% @rank.each do |rank| %>
        <% cnt += 1 %>
        <tr>
        <td><p><%= cnt %>位</p></td>
        <% if(rank[2].nil?) %>
          <td><img src="/assets/icon.png" width="100px" height="100px"></td>
        <% else %>
          <td><img src=<%=rank[2]%> width="50px" height="50px"></td>
        <% end %>
        <td><p><%= rank[0]%></p></td>
        <td><p><%= rank[1]%>ポイント</p></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>